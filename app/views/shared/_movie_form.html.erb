 <%= form_for(Movie.new) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :length %>
      <%= f.text_field :length %>

      <%= f.label :director %>
      <%= f.text_field :director %>

      <%= f.label :cast %>
      <%= f.text_field :cast %>

      <%= f.label :genre %>
      <%= f.text_field :genre %>

      <%= f.submit "Create new movie", class: "btn btn-small btn-success" %>
    <% end %>