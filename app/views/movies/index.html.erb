<% provide(:title, 'All movies') %>
<h1>All movies</h1>

<%= will_paginate %>

<ul class="movies">
	<% @movies.each do |movie| %>
    <li>
      <%= link_to movie.name, movie %>
      	  <% if current_user.admin? && !current_user?(@user) %>
	      | <%= link_to "delete", movie, method: :delete,
	                                    data: { confirm: "You sure?" } %>
	    <% end %>
    </li>
 <% end %>
</ul>

<%= will_paginate %>