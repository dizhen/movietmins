<% provide(:title, 'Create movie') %>
<h1>Create a new movie</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@movie) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :length %>
      <%= f.text_field :length %>

      <%= f.label :director %>
      <%= f.text_field :director %>

      <%= f.label :cast %>
      <%= f.text_field :cast %>

      <%= f.label :genre %>
      <%= f.text_field :genre %>

      <%= f.submit "Create new movie", class: "btn btn-large btn-success" %>
    <% end %>
  </div>
</div>