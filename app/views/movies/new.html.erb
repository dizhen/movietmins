<% provide(:title, 'Create movie') %>
<h1>Create a new movie</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@movie) do |f| %>
      <% if @movie.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-error">
          The form contains <%= pluralize(@movie.errors.count, "error") %>.
        </div>
      <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :length %>
      <%= f.text_field :length %>

            <%= f.label :director %>
      <%= f.text_field :director %>

            <%= f.label :cast %>
      <%= f.text_field :cast %>

            <%= f.label :genre %>
      <%= f.text_field :genre %>

      <%= f.submit "Create new movie", class: "btn btn-large btn-success" %>
    <% end %>
  </div>
</div>